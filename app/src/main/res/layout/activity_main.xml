<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tile_screen_counter"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_margin="32dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        />

    <Button
        android:id="@+id/btn_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/data"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/et_counter"
        app:layout_constraintEnd_toEndOf="@id/et_counter"
        app:layout_constraintTop_toBottomOf="@id/et_counter"
        />
    <Button
        android:id="@+id/btn_show"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/show"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/btn_data"
        app:layout_constraintEnd_toEndOf="@id/btn_data"
        app:layout_constraintTop_toBottomOf="@id/btn_data"
        />

</androidx.constraintlayout.widget.ConstraintLayout>